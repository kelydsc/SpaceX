<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRecyclerViewFlightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flight Number:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRecyclerViewFlightNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRecyclerViewMissionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mission Name:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRecyclerViewMissionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="FalconSat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRecyclerViewRocketIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rocket Id:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRecyclerViewRocketId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="falcon1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRecyclerViewRocketNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rocket Name:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRecyclerViewRocketName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Falcon 1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRecyclerViewRocketTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rocket Type:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRecyclerViewRocketType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Merlin A" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>